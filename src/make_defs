# Opciones de compilado y lincado para depuracion y explotacion.
C_LINUX		=	-O3 -finline-functions -Wno-inline -DNDEBUG -c -I${INC} -DALBINO
L_LINUX		=	-O3 -finline-functions -Wno-inline -DNDEBUG -L${LIB}
LIB_LINUX	=	-lveu -static
CC_LINUX    =   gcc -pedantic -Wall -D'ARCH="Linux"' 
CPP_LINUX	=	g++

CFLAGS		=	$(C_LINUX)
CPPFLAGS	=	$(C_LINUX)
LFLAGS		=	$(L_LINUX)
LIBVEU		=	$(LIB_LINUX)
CC			=	$(CC_LINUX)
CPP			=	$(CPP_LINUX)
MAKE		=	make -s

# Reglas de construccion.
.c.o		:
				@echo $(CC) $(CFLAGS) -o $@ $<
				@$(CC) $(CFLAGS) -o $@ $<

.C.o		:
				@echo $(CC) $(CFLAGS) -o $@ $<
				@$(CC) $(CFLAGS) -o $@ $<

#       C++ language section for extension .cpp

.SUFFIXES: .cpp

.cpp:
	$(LINK.cc) $(LFLAGS) -o $@ $< $(LDLIBS)
.cpp.o:
	$(COMPILE.cc) $(CFLAGS) $(OUTPUT_OPTION) $<
.cpp.a:
	$(COMPILE.cc) $(CFLAGS) -o $% $<
	$(AR) $(ARFLAGS) $@ $%
	$(RM) $%


