#!/bin/csh

###################################################################
#                                                                 #
#   Script para transcribir texto utilizando Saga                 #
#  Transcripción en el dialecto hablado en Colombia (andes)       #
#                                                                 #
#                                         José B. Mariño          #
#                                         Febrero de 1998         #
###################################################################

if ($#argv != 2) then
   echo "Usage: $0 file_orig file_dest"
   exit 1
endif

set bindir = @bindir@
set datadir = @datadir@

set fileIn = $1
set fileOut = $2

set DirDicc = $datadir/dicc/Col
set DicExc = $DirDicc/ColExc.dicc
set DicSust = $DirDicc/ColSust.dicc

set PostProcesado = "cat"
set flag = "-MS -MA"

( $bindir/saga $flag -d $DicExc -x $DicSust -e errores$$ $fileIn | \
      $PostProcesado >! $fileOut ) >! extranyos$$

if (! -z errores$$) then
   echo "=====================================" >>! SAGA.ERRORES
   date >> SAGA.ERRORES
   cat $fileIn >> SAGA.ERRORES
   cat $fileOut >> SAGA.ERRORES
   cat errores$$ >> SAGA.ERRORES
endif

if (! -z extranyos$$) then
   echo "=====================================" >>! SAGA.ERRORES
   cat extranyos$$ >> SAGA.ERRORES
endif

\rm -f errores$$ extranyos$$

exit 0

